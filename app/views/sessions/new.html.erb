<%# AdminKit風ログイン画面: ロゴ＋タイトル、アイコン付きフィールド、パスワード表示切替 %>
<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8" style="background-color: var(--color-background);">
  <%# ヘッダー %>
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="flex justify-center">
      <div class="w-20 h-20 rounded-full flex items-center justify-center" style="background-color: var(--color-primary); box-shadow: var(--shadow-lg);">
        <svg class="h-10 w-10 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 3h6a2 2 0 012 2v1H7V5a2 2 0 012-2z"/>
          <rect x="5" y="6" width="14" height="15" rx="2" ry="2"/>
          <path d="M9 14l2 2 4-4" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
    <h2 class="mt-6 text-center text-2xl font-bold">RoR出席管理システムログイン</h2>
    <p class="mt-2 text-center text-sm text-body-secondary">メールアドレスとパスワードを入力してください</p>
  </div>

  <%# ログインフォーム %>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="py-8 px-4 sm:px-10" style="background-color: var(--color-surface); border-radius: var(--radius-lg); box-shadow: var(--shadow-md);" data-controller="login">
      <div id="flash"><%= render "shared/flash" %></div>

      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <%= hidden_field_tag :role, "student", data: { login_target: "roleInput" } %>

        <%# メールアドレス %>
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="5" width="18" height="14" rx="2" ry="2" />
                <path d="M3 7l9 6 9-6" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
            <%= f.email_field :email,
              class: "w-full py-2.5 pl-10 pr-4 text-base",
              style: "border: 1px solid var(--color-border); border-radius: var(--radius-md); background-color: var(--color-surface);",
              required: true,
              autofocus: true,
              autocomplete: "username",
              inputmode: "email",
              autocapitalize: "off",
              autocorrect: "off",
              spellcheck: "false",
              maxlength: 255,
              placeholder: "student@example.com",
              data: { login_target: "email" } %>
          </div>
        </div>

        <%# パスワード %>
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="5" y="11" width="14" height="9" rx="2" />
                <path d="M8 11V7a4 4 0 0 1 8 0v4" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
            <%= f.password_field :password,
              class: "w-full py-2.5 pl-10 pr-10 text-base",
              style: "border: 1px solid var(--color-border); border-radius: var(--radius-md); background-color: var(--color-surface);",
              required: true,
              autocomplete: "current-password",
              minlength: 8,
              maxlength: 72,
              autocapitalize: "off",
              autocorrect: "off",
              spellcheck: "false",
              data: { login_target: "password" } %>
            <button
              type="button"
              class="absolute inset-y-0 right-0 pr-3 flex items-center"
              data-action="login#togglePassword"
              aria-label="パスワードを表示"
            >
              <svg class="h-5 w-5 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" data-login-target="eye">
                <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7-10-7-10-7Z" />
                <circle cx="12" cy="12" r="3" />
              </svg>
              <svg class="h-5 w-5 hidden text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" data-login-target="eyeOff">
                <path d="M17.94 17.94A10.94 10.94 0 0 1 12 19c-6 0-10-7-10-7a20.28 20.28 0 0 1 5.06-5.94" />
                <path d="M9.88 9.88A3 3 0 0 0 12 15a3 3 0 0 0 2.12-.88" />
                <path d="M1 1l22 22" />
                <path d="M14.12 14.12 9.88 9.88" />
                <path d="M9.88 9.88 7.5 7.5" />
                <path d="M16.5 16.5 14.12 14.12" />
              </svg>
            </button>
          </div>
        </div>

        <%# アカウントタイプ切替 %>
        <div>
          <label class="block text-sm font-medium mb-2">アカウントタイプ</label>
          <div class="grid grid-cols-2 gap-3">
            <button
              type="button"
              class="w-full py-2.5 px-4 border font-medium focus:outline-none transition-colors"
              style="border-radius: var(--radius-md);"
              data-action="login#selectStudent"
              data-login-target="roleStudent"
              data-active-classes="bg-[var(--color-primary)] border-[var(--color-primary)] text-white"
              data-inactive-classes="border-[var(--color-border)] text-[var(--color-text-primary)] hover:bg-[var(--color-surface-hover)]"
            >
              学生
            </button>
            <button
              type="button"
              class="w-full py-2.5 px-4 border font-medium focus:outline-none transition-colors"
              style="border-radius: var(--radius-md);"
              data-action="login#selectTeacher"
              data-login-target="roleTeacher"
              data-active-classes="bg-[var(--color-info)] border-[var(--color-info)] text-white"
              data-inactive-classes="border-[var(--color-border)] text-[var(--color-text-primary)] hover:bg-[var(--color-surface-hover)]"
            >
              教員
            </button>
          </div>
        </div>

        <%# ログインボタン %>
        <div>
          <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <%# デモログインセクション %>
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full" style="border-top: 1px solid var(--color-border);"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2" style="background-color: var(--color-surface); color: var(--color-text-secondary);">デモ用ログイン</span>
          </div>
        </div>

        <div class="mt-4 grid grid-cols-1 gap-3">
          <button
            type="button"
            class="btn btn-secondary w-full"
            data-action="login#fillDemo"
            data-login-role-param="student"
          >
            学生でログイン
          </button>
          <button
            type="button"
            class="btn btn-secondary w-full"
            data-action="login#fillDemo"
            data-login-role-param="teacher"
          >
            教員でログイン
          </button>
        </div>

        <div class="mt-4 text-center">
          <p class="text-xs text-body-muted">デモ用パスワード: password</p>
        </div>

        <%# フッターリンク %>
        <div class="mt-6 text-center text-xs text-body-secondary">
          <%= link_to "利用規約", terms_path, class: "hover:underline", style: "color: var(--color-text-secondary);" %>
          <span class="mx-1">/</span>
          <%= link_to "プライバシー", privacy_path, class: "hover:underline", style: "color: var(--color-text-secondary);" %>
          <span class="mx-1">/</span>
          <%= link_to "データ保持", data_policy_path, class: "hover:underline", style: "color: var(--color-text-secondary);" %>
        </div>
      </div>
    </div>
  </div>
</div>
