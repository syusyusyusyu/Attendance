<div class="max-w-md mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
  <h1 class="text-2xl font-semibold text-slate-900 mb-2">ログイン</h1>
  <p class="text-sm text-slate-500 mb-6">メールアドレスとパスワードを入力してください。</p>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
      <%= f.email_field :email, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500", required: true, autofocus: true %>
    </div>
    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500", required: true %>
    </div>
    <%= f.submit "ログイン", class: "w-full rounded-md bg-emerald-600 text-white py-2 font-semibold hover:bg-emerald-500" %>
  <% end %>
</div>
