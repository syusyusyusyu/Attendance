<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <% style = type.to_sym == :notice ? "bg-emerald-50 border-emerald-200 text-emerald-900" : "bg-rose-50 border-rose-200 text-rose-900" %>
  <div class="mb-4 rounded-lg border px-4 py-3 text-sm <%= style %>">
    <%= message %>
  </div>
<% end %>
