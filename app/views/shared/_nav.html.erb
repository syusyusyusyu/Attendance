<header class="bg-white border-b border-slate-200 sticky top-0 z-10">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to "出席管理システム", root_path, class: "text-lg font-semibold text-emerald-600" %>
      <nav class="hidden md:flex items-center gap-3 text-sm">
        <%= link_to "ダッシュボード", root_path, class: "text-slate-600 hover:text-slate-900" %>
        <% if current_user.teacher? %>
          <%= link_to "出席確認", attendance_path, class: "text-slate-600 hover:text-slate-900" %>
          <%= link_to "QRコード生成", generate_qr_path, class: "text-slate-600 hover:text-slate-900" %>
        <% else %>
          <%= link_to "QRスキャン", scan_path, class: "text-slate-600 hover:text-slate-900" %>
          <%= link_to "出席履歴", history_path, class: "text-slate-600 hover:text-slate-900" %>
        <% end %>
        <%= link_to "プロフィール", profile_path, class: "text-slate-600 hover:text-slate-900" %>
      </nav>
    </div>
    <div class="flex items-center gap-3 text-sm">
      <span class="hidden sm:inline text-slate-500"><%= current_user.name %></span>
      <%= button_to "ログアウト", logout_path, method: :delete, class: "rounded-full border border-slate-200 px-4 py-2 text-slate-700 hover:bg-slate-100" %>
    </div>
  </div>
</header>
