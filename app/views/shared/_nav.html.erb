<%# AdminKit風トップバー: ライト背景、検索ボックス、通知ベル、ユーザーメニュー %>
<% avatar_url = current_user.profile_image.presence || "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(current_user.name)}&background=random" %>

<header class="topbar fixed top-0 inset-x-0 z-40">
  <div class="px-4 sm:px-6 lg:px-8 w-full">
    <div class="flex items-center justify-between h-[var(--app-header-height)] gap-4">
      <%# 左側: メニュートグル + ブランド %>
      <div class="flex items-center gap-3">
        <button
          type="button"
          data-action="click->sidebar#toggle"
          class="topbar-icon-button md:hidden focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--color-primary)]"
          aria-label="メニューを開く"
        >
          <span class="sr-only">メニューを開く</span>
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>

        <%= link_to root_path, class: "flex items-center gap-2 lg:hidden" do %>
          <span class="text-primary font-semibold text-sm">RoR出席管理システム</span>
        <% end %>
      </div>

      <%# 中央: 検索 %>
      <div class="hidden md:flex flex-1 justify-center">
        <div class="topbar-search w-full max-w-xl">
          <svg class="topbar-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="7" />
            <path d="M21 21l-4.3-4.3" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <input type="search" placeholder="検索..." aria-label="検索" />
        </div>
      </div>

      <%# 右側: 通知 + ユーザーメニュー %>
      <div class="flex items-center gap-2">
        <%# 通知ベル %>
        <%= link_to notifications_path, class: "topbar-icon-button focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--color-primary)]", aria: { label: "通知" } do %>
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 8a6 6 0 1 0-12 0c0 7-3 9-3 9h18s-3-2-3-9" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <%= render "shared/unread_notifications_badge", count: @unread_notifications_count %>
        <% end %>

        <%# ユーザーメニュー %>
        <details class="ml-1 relative">
          <summary class="flex items-center max-w-xs rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--color-primary)] cursor-pointer select-none p-1 hover:bg-[var(--color-surface-hover)] transition-colors">
            <span class="sr-only">ユーザーメニューを開く</span>
            <img class="h-8 w-8 rounded-full object-cover" src="<%= avatar_url %>" alt="" />
            <span class="ml-2 text-gray-700 hidden sm:block font-medium"><%= current_user.name %></span>
            <svg class="ml-1 h-4 w-4 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 11.168l3.71-3.938a.75.75 0 1 1 1.08 1.04l-4.25 4.5a.75.75 0 0 1-1.08 0l-4.25-4.5a.75.75 0 0 1 .02-1.06Z" clip-rule="evenodd" />
            </svg>
          </summary>

          <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 overflow-hidden" style="border-radius: var(--radius-lg);">
            <div class="py-1">
              <%= link_to profile_path, class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21a8 8 0 1 0-16 0" stroke-linecap="round" stroke-linejoin="round" />
                  <circle cx="12" cy="7" r="4" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                プロフィール
              <% end %>
              <%= link_to logout_path, data: { turbo_method: :delete }, class: "flex w-full items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke-linecap="round" stroke-linejoin="round" />
                  <path d="M16 17l5-5-5-5" stroke-linecap="round" stroke-linejoin="round" />
                  <path d="M21 12H9" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                ログアウト
              <% end %>
            </div>
          </div>
        </details>
      </div>
    </div>
  </div>
</header>
