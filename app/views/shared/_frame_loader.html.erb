  <div class="w-full h-full p-4 space-y-4">
    <%# スケルトンヘッダー %>
    <div class="flex items-center gap-3">
      <div class="skeleton skeleton-avatar"></div>
      <div class="space-y-2 flex-1">
        <div class="skeleton skeleton-text lg w-1/3"></div>
        <div class="skeleton skeleton-text sm w-1/4"></div>
      </div>
    </div>
    <%# スケルトンコンテンツ %>
    <div class="space-y-3">
      <div class="skeleton skeleton-text w-full"></div>
      <div class="skeleton skeleton-text w-5/6"></div>
      <div class="skeleton skeleton-text w-4/6"></div>
    </div>
  </div>
</div>
