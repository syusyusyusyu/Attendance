<%# AdminKit風申請行: バッジ、承認/却下ボタン %>
<% type_labels = {
  "absent" => "欠席",
  "late" => "遅刻",
  "excused" => "公欠"
} %>
<% status_labels = {
  "pending" => "審査中",
  "approved" => "承認",
  "rejected" => "却下"
} %>
<% status_badges = {
  "pending" => "badge badge-warning",
  "approved" => "badge badge-success",
  "rejected" => "badge badge-error"
} %>

<tr id="<%= dom_id(request, :row) %>">
  <td class="px-4 py-3">
    <input
      type="checkbox"
      name="request_ids[]"
      value="<%= request.id %>"
      form="bulk-requests-form"
      class="h-4 w-4 rounded"

      data-bulk-select-target="item"
      data-action="bulk-select#syncToggle"
      <%= request.status_pending? ? "" : "disabled" %>
    />
  </td>
  <td class="px-4 py-3 whitespace-normal text-sm text-body-secondary"><%= request.date.strftime("%Y-%m-%d") %></td>
  <td class="px-4 py-3 text-sm"><%= request.school_class.name %></td>
  <td class="px-4 py-3 text-sm">
    <%= render "shared/session_status_badges", session: request.class_session %>
  </td>
  <td class="px-4 py-3 text-sm">
    <div><%= request.user.name %></div>
    <div class="text-xs text-body-muted"><%= request.user.student_id %></div>
  </td>
  <td class="px-4 py-3 text-sm"><%= type_labels[request.request_type] || request.request_type %></td>
  <td class="px-4 py-3 text-sm"><%= request.reason %></td>
  <td class="px-4 py-3">
    <span class="<%= status_badges[request.status] || "badge" %>">
      <%= status_labels[request.status] || request.status %>
    </span>
  </td>
  <td class="px-4 py-3" style="min-width: 140px;">
    <% if request.status_pending? %>
      <%= form_with model: request, url: attendance_request_path(request), method: :patch, class: "space-y-2" do |f| %>
        <%= f.text_area :decision_reason, rows: 1, class: "input", placeholder: "コメント任意" %>
        <div class="flex gap-2">
          <button type="submit" name="attendance_request[status]" value="approved" class="btn btn-primary text-sm flex-1 whitespace-nowrap">
            承認
          </button>
          <button type="submit" name="attendance_request[status]" value="rejected" class="btn btn-secondary text-sm flex-1 whitespace-nowrap">
            却下
          </button>
        </div>
      <% end %>
    <% else %>
      <div class="text-xs text-body-muted">
        <div><%= request.processed_at&.strftime("%Y-%m-%d %H:%M") %></div>
        <div><%= request.decision_reason.presence || "コメントなし" %></div>
      </div>
    <% end %>
  </td>
</tr>
