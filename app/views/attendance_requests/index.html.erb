<%# AdminKit風出席申請: DataGrid、バッジ、一括処理 %>
<% type_labels = {
  "absent" => "欠席",
  "late" => "遅刻",
  "excused" => "公欠"
} %>
<% status_labels = {
  "pending" => "審査中",
  "approved" => "承認",
  "rejected" => "却下"
} %>
<% status_badges = {
  "pending" => "badge badge-warning",
  "approved" => "badge badge-success",
  "rejected" => "badge badge-error"
} %>

<div class="max-w-6xl mx-auto space-y-6">
  <%# ページヘッダー %>
  <div class="page-header">
    <div>
      <h1 class="page-title">出席申請</h1>
      <p class="page-subtitle"><%= current_user.staff? ? "学生からの申請を処理します。" : "欠席・遅刻・公欠の申請を行います。" %></p>
      <%= breadcrumb(["出席申請"]) %>
    </div>
  </div>

  <% if current_user.staff? %>
    <%= turbo_frame_tag "attendance_requests_list", class: "drawer-panel relative", data: { controller: "drawer", drawer_open_value: true } do %>
    <%= render "shared/frame_loader" %>

    <div class="not-implemented-banner">
      <svg class="not-implemented-banner-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20z"/>
        <path d="M12 8v4l3 3"/>
      </svg>
      <span class="not-implemented-banner-text">承認は教員が行い、最終承認/特権操作は管理者が担当します。</span>
    </div>

    <%# フィルターカード %>
    <div class="card">
      <div class="card-header">
        <h2 class="font-semibold">絞り込み条件</h2>
      </div>
      <div class="card-body">
        <%= form_with url: attendance_requests_path,
          method: :get,
          class: "grid grid-cols-1 md:grid-cols-3 gap-4 items-end",
          data: {
            controller: "request-filter",
            action: "change->request-filter#submit input->request-filter#submitDebounced"
          } do |f| %>
          <div>
            <%= f.label :class_id, "クラス", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
            <%= f.select :class_id,
              options_for_select(@classes.map { |klass| ["#{klass.name} (#{klass.room})", klass.id] }, @selected_class&.id),
              { include_blank: "すべて" },
              class: "input" %>
          </div>
          <div>
            <%= f.label :status, "申請状況", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
            <%= f.select :status,
              options_for_select(status_labels.map { |key, label| [label, key] }, @status),
              { include_blank: "すべて" },
              class: "input" %>
          </div>
          <div class="flex flex-col gap-2">
            <%= f.submit "絞り込む", class: "btn btn-primary w-full" %>
            <% if session[:attendance_requests_last_filter].present? %>
              <%= link_to "前回条件",
                attendance_requests_path(session[:attendance_requests_last_filter]),
                class: "btn btn-secondary w-full" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# ステータスタブ %>
    <div class="flex flex-wrap gap-2 mt-4">
      <% all_active = @status.blank? %>
      <%= link_to "すべて (#{@request_counts&.values&.sum || 0})",
        attendance_requests_path(class_id: @selected_class&.id),
        class: "btn #{all_active ? 'btn-primary' : 'btn-secondary'}" %>
      <% %w[pending approved rejected].each do |status_key| %>
        <% label = status_labels[status_key] || status_key %>
        <% active = @status == status_key %>
        <%= link_to "#{label} (#{@request_counts&.fetch(status_key, 0) || 0})",
          attendance_requests_path(class_id: @selected_class&.id, status: status_key),
          class: "btn #{active ? 'btn-primary' : 'btn-secondary'}" %>
      <% end %>
    </div>

    <%# 一括処理カード %>
    <div class="card mt-4">
      <div class="card-header">
        <h2 class="font-semibold">一括処理</h2>
      </div>
      <div class="card-body">
        <%= form_with url: bulk_update_attendance_requests_path, method: :patch, id: "bulk-requests-form", class: "grid grid-cols-1 lg:grid-cols-3 gap-4 items-end" do %>
          <%= hidden_field_tag :class_id, @selected_class&.id %>
          <%= hidden_field_tag :filter_status, @status %>
          <div class="lg:col-span-2">
            <label class="block text-sm font-medium mb-2">コメント任意</label>
            <%= text_area_tag :decision_reason, nil, rows: 2, class: "input", placeholder: "一括処理のコメントを入力" %>
          </div>
          <div class="flex flex-col sm:flex-row gap-2">
            <button type="submit" name="status" value="approved" class="btn btn-primary w-full sm:w-auto">
              選択を承認
            </button>
            <button type="submit" name="status" value="rejected" class="btn btn-secondary w-full sm:w-auto">
              選択を却下
            </button>
          </div>
        <% end %>
        <p class="text-xs mt-2 text-body-muted">表のチェックボックスで対象申請を選択してください。ショートカット: Shift + A = 承認 / Shift + R = 却下</p>
      </div>
    </div>

    <%# 申請テーブル %>
    <div class="card mt-4">
      <div class="card-body p-0">
        <div data-controller="bulk-select" data-bulk-select-form-id-value="bulk-requests-form">
          <div class="table-container">
            <table class="w-full">
              <thead>
                <tr>
                  <th>
                    <input
                      type="checkbox"
                      class="h-4 w-4 rounded"
                      style="border-color: var(--color-border); accent-color: var(--color-primary);"
                      data-bulk-select-target="toggle"
                      data-action="bulk-select#toggleAll"
                    />
                  </th>
                  <th>日付</th>
                  <th>クラス</th>
                  <th>授業回</th>
                  <th>学生</th>
                  <th>種別</th>
                  <th>理由</th>
                  <th>状況</th>
                  <th>処理</th>
                </tr>
              </thead>
              <tbody>
                <% if @requests.any? %>
                  <% @requests.each do |request| %>
                    <%= render "row", request: request %>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="9" class="px-4 py-8 text-center">
                      <div class="empty-state" style="padding: 0;">
                        <div class="empty-state-title">申請がありません。</div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%# フローティングアクション %>
          <div
            class="fixed bottom-6 right-6 z-50 hidden"
            data-bulk-select-target="floating"
          >
            <div class="rounded-full backdrop-blur px-4 py-3 flex items-center gap-3" style="background-color: var(--color-surface); border: 1px solid var(--color-border); box-shadow: var(--shadow-lg);">
              <div class="text-xs text-body-secondary">
                選択: <span class="font-semibold" data-bulk-select-target="count">0</span>件
              </div>
              <button type="button" class="btn btn-primary text-xs px-3 py-2" data-action="bulk-select#approveSelected">
                承認
              </button>
              <button type="button" class="btn btn-secondary text-xs px-3 py-2" data-action="bulk-select#rejectSelected">
                却下
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%# 学生用: 新規申請フォーム %>
  <div class="card">
    <div class="card-header">
      <h2 class="font-semibold">新規申請</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @request, url: attendance_requests_path, method: :post, class: "grid grid-cols-1 md:grid-cols-2 gap-4" do |f| %>
        <div>
          <%= f.label :school_class_id, "クラス", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <%= f.select :school_class_id,
            options_for_select(@classes.map { |klass| ["#{klass.name} (#{klass.room})", klass.id] }),
            { include_blank: "クラスを選択" },
            class: "input" %>
        </div>
        <div class="min-w-0">
          <%= f.label :date, "日付", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <%= f.date_field :date, value: Date.current, class: "input" %>
        </div>
        <div>
          <%= f.label :request_type, "申請種別", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <%= f.select :request_type,
            options_for_select(type_labels.map { |key, label| [label, key] }),
            { include_blank: "種別を選択" },
            class: "input" %>
        </div>
        <div class="md:col-span-2" data-controller="preset">
          <%= f.label :reason, "理由", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
          <%= f.text_area :reason,
            rows: 3,
            class: "input",
            placeholder: "例: 体調不良のため欠席します。",
            data: { preset_target: "input" } %>
          <div class="mt-2 flex flex-wrap gap-2">
            <button
              type="button"
              class="min-h-0 min-w-0 rounded-full px-3 py-1.5 text-xs"
              style="border: 1px solid var(--color-border); background-color: var(--color-surface); color: var(--color-text-primary);"
              data-action="preset#fill"
              data-preset-value-param="体調不良のため欠席します。"
            >
              体調不良
            </button>
            <button
              type="button"
              class="min-h-0 min-w-0 rounded-full px-3 py-1.5 text-xs"
              style="border: 1px solid var(--color-border); background-color: var(--color-surface); color: var(--color-text-primary);"
              data-action="preset#fill"
              data-preset-value-param="交通機関の遅延のため遅刻します。"
            >
              交通遅延
            </button>
            <button
              type="button"
              class="min-h-0 min-w-0 rounded-full px-3 py-1.5 text-xs"
              style="border: 1px solid var(--color-border); background-color: var(--color-surface); color: var(--color-text-primary);"
              data-action="preset#fill"
              data-preset-value-param="学校行事のため公欠です。"
            >
              公欠
            </button>
          </div>
        </div>
        <div class="md:col-span-2">
          <%= f.submit "申請を送信", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <p class="text-xs mt-2 text-body-muted">申請は承認されるまで出席に反映されません。</p>
    </div>
  </div>

  <%# 学生用: 申請履歴 %>
  <div class="card">
    <div class="card-header">
      <h2 class="font-semibold">申請履歴</h2>
    </div>
    <div class="card-body p-0">
      <div class="table-container">
        <table class="w-full">
          <thead>
            <tr>
              <th>日付</th>
              <th>クラス</th>
              <th>種別</th>
              <th>授業回</th>
              <th>理由</th>
              <th>状況</th>
            </tr>
          </thead>
          <tbody>
            <% if @requests.any? %>
              <% @requests.each do |request| %>
                <tr>
                  <td class="px-4 py-3 text-sm text-body-secondary"><%= request.date.strftime("%Y-%m-%d") %></td>
                  <td class="px-4 py-3 text-sm"><%= request.school_class.name %></td>
                  <td class="px-4 py-3 text-sm"><%= type_labels[request.request_type] || request.request_type %></td>
                  <td class="px-4 py-3 text-sm">
                    <%= render "shared/session_status_badges", session: request.class_session %>
                  </td>
                  <td class="px-4 py-3 text-sm"><%= request.reason %></td>
                  <td class="px-4 py-3">
                    <span class="<%= status_badges[request.status] || "badge" %>">
                      <%= status_labels[request.status] || request.status %>
                    </span>
                    <% if request.decision_reason.present? %>
                      <div class="text-xs mt-1 text-body-muted"><%= request.decision_reason %></div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-4 py-8 text-center">
                  <div class="empty-state" style="padding: 0;">
                    <div class="empty-state-title">申請履歴がありません。</div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
</div>
