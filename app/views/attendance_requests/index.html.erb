<% type_labels = {
  "absent" => "欠席",
  "late" => "遅刻",
  "excused" => "公欠"
} %>
<% status_labels = {
  "pending" => "審査中",
  "approved" => "承認",
  "rejected" => "却下"
} %>
<% status_badges = {
  "pending" => "badge badge-warning",
  "approved" => "badge badge-success",
  "rejected" => "badge badge-error"
} %>

<div class="max-w-6xl mx-auto space-y-6">
  <div class="card p-6">
    <h1 class="text-2xl font-semibold text-gray-900">出席申請</h1>
    <p class="text-sm text-gray-500 mt-1"><%= current_user.staff? ? "学生からの申請を処理します。" : "欠席・遅刻・公欠の申請を行います。" %></p>
  </div>

  <% if current_user.staff? %>
    <div class="card p-6">
      <%= form_with url: attendance_requests_path, method: :get, class: "grid grid-cols-1 md:grid-cols-3 gap-4 items-end" do |f| %>
        <div>
          <%= f.label :class_id, "クラス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :class_id,
            options_for_select(@classes.map { |klass| ["#{klass.name} (#{klass.room})", klass.id] }, @selected_class&.id),
            { include_blank: "すべて" },
            class: "input" %>
        </div>
        <div>
          <%= f.label :status, "申請状況", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :status,
            options_for_select(status_labels.map { |key, label| [label, key] }, @status),
            { include_blank: "すべて" },
            class: "input" %>
        </div>
        <div>
          <%= f.submit "絞り込む", class: "btn btn-secondary w-full" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-wrap gap-2">
      <% all_active = @status.blank? %>
      <%= link_to "すべて (#{@request_counts&.values&.sum || 0})",
        attendance_requests_path(class_id: @selected_class&.id),
        class: "btn #{all_active ? 'btn-primary' : 'btn-secondary'}" %>
      <% %w[pending approved rejected].each do |status_key| %>
        <% label = status_labels[status_key] || status_key %>
        <% active = @status == status_key %>
        <%= link_to "#{label} (#{@request_counts&.fetch(status_key, 0) || 0})",
          attendance_requests_path(class_id: @selected_class&.id, status: status_key),
          class: "btn #{active ? 'btn-primary' : 'btn-secondary'}" %>
      <% end %>
    </div>

    <div class="card p-6">
      <h2 class="text-sm font-medium text-gray-700 mb-3">一括処理</h2>
      <%= form_with url: bulk_update_attendance_requests_path, method: :patch, id: "bulk-requests-form", class: "grid grid-cols-1 lg:grid-cols-3 gap-4 items-end" do %>
        <%= hidden_field_tag :class_id, @selected_class&.id %>
        <%= hidden_field_tag :filter_status, @status %>
        <div class="lg:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">コメント任意</label>
          <%= text_area_tag :decision_reason, nil, rows: 2, class: "input", placeholder: "一括処理のコメントを入力" %>
        </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <button type="submit" name="status" value="approved" class="btn btn-primary w-full sm:w-auto">
            選択を承認
          </button>
          <button type="submit" name="status" value="rejected" class="btn btn-secondary w-full sm:w-auto">
            選択を却下
          </button>
        </div>
      <% end %>
      <p class="text-xs text-gray-500 mt-2">表のチェックボックスで対象申請を選択してください。ショートカット: Shift + A = 承認 / Shift + R = 却下</p>
    </div>

    <div class="card p-6">
      <div class="table-container" data-controller="bulk-select" data-bulk-select-form-id-value="bulk-requests-form">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <input
                  type="checkbox"
                  class="h-4 w-4 rounded border-gray-300 text-[var(--google-green)] focus:ring-[var(--google-green)]"
                  data-bulk-select-target="toggle"
                  data-action="bulk-select#toggleAll"
                />
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日付</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">クラス</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">授業回</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">学生</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">種別</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">理由</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状況</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">処理</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @requests.any? %>
              <% @requests.each do |request| %>
                <tr>
                  <td class="px-4 py-3">
                    <input
                      type="checkbox"
                      name="request_ids[]"
                      value="<%= request.id %>"
                      form="bulk-requests-form"
                      class="h-4 w-4 rounded border-gray-300 text-[var(--google-green)] focus:ring-[var(--google-green)]"
                      data-bulk-select-target="item"
                      data-action="bulk-select#syncToggle"
                      <%= request.status_pending? ? "" : "disabled" %>
                    />
                  </td>
                  <td class="px-4 py-3 whitespace-normal text-sm text-gray-500"><%= request.date.strftime("%Y-%m-%d") %></td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= request.school_class.name %></td>
                  <td class="px-4 py-3 text-sm text-gray-700">
                    <%= render "shared/session_status_badges", session: request.class_session %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-700">
                    <div><%= request.user.name %></div>
                    <div class="text-xs text-gray-400"><%= request.user.student_id %></div>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= type_labels[request.request_type] || request.request_type %></td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= request.reason %></td>
                  <td class="px-4 py-3">
                    <span class="<%= status_badges[request.status] || "badge" %>">
                      <%= status_labels[request.status] || request.status %>
                    </span>
                  </td>
                  <td class="px-4 py-3">
                    <% if request.status_pending? %>
                      <%= form_with model: request, url: attendance_request_path(request), method: :patch, class: "space-y-2" do |f| %>
                        <div class="grid grid-cols-2 gap-2">
                          <button type="submit" name="attendance_request[status]" value="approved" class="btn btn-primary text-sm">
                            承認
                          </button>
                          <button type="submit" name="attendance_request[status]" value="rejected" class="btn btn-secondary text-sm">
                            却下
                          </button>
                        </div>
                        <%= f.text_area :decision_reason, rows: 2, class: "input", placeholder: "コメント任意" %>
                      <% end %>
                    <% else %>
                      <div class="text-xs text-gray-500">
                        <div><%= request.processed_at&.strftime("%Y-%m-%d %H:%M") %></div>
                        <div><%= request.decision_reason.presence || "コメントなし" %></div>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="9" class="px-4 py-6 text-center text-sm text-gray-500">申請がありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="card p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">新規申請</h2>
      <%= form_with model: @request, url: attendance_requests_path, method: :post, class: "grid grid-cols-1 md:grid-cols-2 gap-4" do |f| %>
        <div>
          <%= f.label :school_class_id, "クラス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :school_class_id,
            options_for_select(@classes.map { |klass| ["#{klass.name} (#{klass.room})", klass.id] }),
            { include_blank: "クラスを選択" },
            class: "input" %>
        </div>
        <div>
          <%= f.label :date, "日付", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :date, value: Date.current, class: "input" %>
        </div>
        <div>
          <%= f.label :request_type, "申請種別", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :request_type,
            options_for_select(type_labels.map { |key, label| [label, key] }),
            { include_blank: "種別を選択" },
            class: "input" %>
        </div>
        <div class="md:col-span-2">
          <%= f.label :reason, "理由", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :reason, rows: 3, class: "input", placeholder: "例: 体調不良のため欠席します" %>
        </div>
        <div class="md:col-span-2">
          <%= f.submit "申請を送信", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <p class="text-xs text-gray-500 mt-2">申請は承認されるまで出席に反映されません。</p>
    </div>

    <div class="card p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">申請履歴</h2>
      <div class="table-container">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日付</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">クラス</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">種別</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">授業回</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">理由</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状況</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @requests.any? %>
              <% @requests.each do |request| %>
                <tr>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= request.date.strftime("%Y-%m-%d") %></td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= request.school_class.name %></td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= type_labels[request.request_type] || request.request_type %></td>
                  <td class="px-4 py-3 text-sm text-gray-700">
                    <%= render "shared/session_status_badges", session: request.class_session %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-700"><%= request.reason %></td>
                  <td class="px-4 py-3">
                    <span class="<%= status_badges[request.status] || "badge" %>">
                      <%= status_labels[request.status] || request.status %>
                    </span>
                    <% if request.decision_reason.present? %>
                      <div class="text-xs text-gray-500 mt-1"><%= request.decision_reason %></div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500">申請履歴がありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
