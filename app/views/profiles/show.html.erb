<% avatar_url = @user.profile_image.presence || "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(@user.name)}&background=random" %>

<div class="max-w-3xl mx-auto space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">プロフィール</h1>
    <p class="text-sm text-gray-500">基本情報を更新できます。</p>
  </div>

  <div class="card">
    <div class="p-6">
      <div class="flex items-center">
        <img src="<%= avatar_url %>" alt="" class="h-20 w-20 rounded-full" />
        <div class="ml-6">
          <div class="text-lg font-medium text-gray-900"><%= @user.name %></div>
          <div class="text-sm text-gray-500"><%= @user.teacher? ? "教員" : "学生" %></div>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 p-6">
      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :name, "氏名", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "input mt-1" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "input mt-1" %>
        </div>

        <% if @user.student? %>
          <div>
            <%= f.label :student_id, "学生ID", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :student_id, class: "input mt-1" %>
          </div>
        <% end %>

        <div>
          <%= f.label :profile_image, "プロフィール画像URL", class: "block text-sm font-medium text-gray-700" %>
          <%= f.url_field :profile_image, class: "input mt-1", placeholder: "https://..." %>
        </div>

        <div>
          <%= f.label :password, "パスワード (変更する場合のみ)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "input mt-1" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "パスワード(確認)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "input mt-1" %>
        </div>

        <div class="flex justify-end">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
