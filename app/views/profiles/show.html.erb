<div class="max-w-2xl mx-auto space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-slate-900">プロフィール</h1>
    <p class="text-sm text-slate-500">基本情報を更新できます。</p>
  </div>

  <div class="bg-white border border-slate-200 rounded-2xl p-6">
    <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :name, "氏名", class: "block text-sm font-medium text-slate-700" %>
        <%= f.text_field :name, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" %>
      </div>
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" %>
      </div>
      <% if @user.student? %>
        <div>
          <%= f.label :student_id, "学籍番号", class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :student_id, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>
      <% end %>
      <div>
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" %>
      </div>
      <div>
        <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password_confirmation, class: "mt-1 w-full rounded-md border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" %>
      </div>
      <div class="flex justify-end">
        <%= f.submit "更新", class: "rounded-md bg-emerald-600 text-white px-6 py-2 hover:bg-emerald-500" %>
      </div>
    <% end %>
  </div>
</div>
