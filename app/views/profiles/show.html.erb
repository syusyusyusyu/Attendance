<%# AdminKit風プロフィール: CSS変数、統一スタイル %>
<% avatar_url = @user.profile_image.presence || "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(@user.name)}&background=random" %>
<% role_label = if @user.admin?
  "管理者"
elsif @user.teacher?
  "教員"
else
  "学生"
end %>

<div class="max-w-3xl mx-auto space-y-6" data-controller="profile" data-profile-editing-value="<%= @user.errors.any? %>">
  <%# ページヘッダー %>
  <div class="card">
    <div class="card-body">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full flex items-center justify-center bg-primary-light">
          <svg class="h-6 w-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="7" r="4" />
            <path d="M20 21a8 8 0 1 0-16 0" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-semibold">プロフィール</h1>
          <p class="text-sm mt-1 text-body-secondary">基本情報を確認・更新できます。</p>
        </div>
      </div>
    </div>
  </div>

  <%# プロフィールカード %>
  <div class="card">
    <div class="p-6">
      <div class="flex items-center">
        <div class="relative">
          <img src="<%= avatar_url %>" alt="" class="h-20 w-20 rounded-full" />
          <% unless current_user.demo_account? %>
            <button type="button" class="absolute bottom-0 right-0 rounded-full p-1 shadow-sm bg-background border-themed">
              <span class="sr-only">プロフィール画像を変更</span>
              <svg class="h-4 w-4 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="7" r="4" />
                <path d="M20 21a8 8 0 1 0-16 0" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </button>
          <% end %>
        </div>
        <div class="ml-6">
          <h3 class="text-lg font-medium"><%= @user.name %></h3>
          <p class="text-sm text-body-muted"><%= role_label %></p>
        </div>
      </div>
    </div>

    <div class="p-6 border-t-themed">
      <% if current_user.demo_account? %>
        <p class="text-sm text-body-muted mb-4">デモアカウントのプロフィールは変更できません。</p>
        <div class="space-y-6 opacity-60">
          <div>
            <span class="block text-sm font-medium" style="color: var(--color-text-primary);">氏名</span>
            <p class="input mt-1 bg-gray-50"><%= @user.name %></p>
          </div>
          <div>
            <span class="block text-sm font-medium" style="color: var(--color-text-primary);">メールアドレス</span>
            <p class="input mt-1 bg-gray-50"><%= @user.email %></p>
          </div>
          <% if @user.student? %>
            <div>
              <span class="block text-sm font-medium" style="color: var(--color-text-primary);">学生ID</span>
              <p class="input mt-1 bg-gray-50"><%= @user.student_id %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
          <div>
            <%= f.label :name, "氏名", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
            <%= f.text_field :name, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
          </div>

          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
            <%= f.email_field :email, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
          </div>

          <% if @user.student? %>
            <div>
              <%= f.label :student_id, "学生ID", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
              <%= f.text_field :student_id, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
            </div>
          <% end %>

          <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
            <%= f.password_field :password, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
          </div>

          <div>
            <%= f.label :password_confirmation, "パスワード(確認)", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
            <%= f.password_field :password_confirmation, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
          </div>

          <div class="flex justify-end space-x-3">
            <button type="button" class="btn btn-secondary hidden" data-profile-target="cancelButton" data-action="profile#cancel">
              キャンセル
            </button>
            <%= f.submit "更新", class: "btn btn-primary hidden", data: { profile_target: "saveButton" } %>
            <button type="button" class="btn btn-primary" data-profile-target="editButton" data-action="profile#edit">
              編集
            </button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%# 通知設定カード %>
  <div class="card" data-controller="push-subscription" data-push-subscription-public-key-value="<%= ENV['WEBPUSH_PUBLIC_KEY'].to_s %>">
    <div class="card-header">
      <h2 class="font-semibold">通知設定</h2>
    </div>
    <div class="card-body space-y-0 divide-y" style="border-color: var(--color-border);">
      <%# Push通知 %>
      <div class="py-4 first:pt-0 last:pb-0">
        <div class="flex items-start gap-3">
          <div class="w-9 h-9 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5" style="background: var(--color-primary-light);">
            <svg class="h-4.5 w-4.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: var(--color-primary);">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1">
              <p class="text-sm font-medium" style="color: var(--color-text-primary);">Push通知</p>
              <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-xs font-medium" style="background: var(--color-bg-hover); color: var(--color-text-muted);" data-push-subscription-target="badge">
                無効
              </span>
            </div>
            <p class="text-xs text-body-muted">ブラウザのPush通知で出席関連のお知らせを受け取ります。</p>
            <div class="flex flex-wrap items-center gap-2 mt-3">
              <button type="button" class="btn btn-primary btn-sm" data-push-subscription-target="subscribeButton" data-action="push-subscription#subscribe">
                有効化
              </button>
              <button type="button" class="btn btn-secondary btn-sm hidden" data-push-subscription-target="unsubscribeButton" data-action="push-subscription#unsubscribe">
                解除
              </button>
              <button type="button" class="btn btn-secondary btn-sm hidden" data-push-subscription-target="testButton" data-action="push-subscription#test">
                テスト送信
              </button>
            </div>
            <p class="text-xs mt-2 hidden" data-push-subscription-target="status"></p>
          </div>
        </div>
      </div>

      <%# メール通知（未実装） %>
      <div class="py-4 first:pt-0 last:pb-0 opacity-50">
        <div class="flex items-start gap-3">
          <div class="w-9 h-9 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5" style="background: var(--color-bg-hover);">
            <svg class="h-4.5 w-4.5 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1">
              <p class="text-sm font-medium" style="color: var(--color-text-primary);">メール通知</p>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium" style="background: var(--color-bg-hover); color: var(--color-text-muted);">今後対応</span>
            </div>
            <p class="text-xs text-body-muted">メールで出席関連のお知らせを受け取ります。</p>
          </div>
        </div>
      </div>

      <%# LINE通知（未実装） %>
      <div class="py-4 first:pt-0 last:pb-0 opacity-50">
        <div class="flex items-start gap-3">
          <div class="w-9 h-9 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5" style="background: var(--color-bg-hover);">
            <svg class="h-4.5 w-4.5 text-body-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1">
              <p class="text-sm font-medium" style="color: var(--color-text-primary);">LINE通知</p>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium" style="background: var(--color-bg-hover); color: var(--color-text-muted);">今後対応</span>
            </div>
            <p class="text-xs text-body-muted">LINEで出席関連のお知らせを受け取ります。</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# 表示設定カード %>
  <div class="card" data-controller="theme">
    <div class="card-header">
      <h2 class="font-semibold">表示設定</h2>
    </div>
    <div class="card-body">
      <div class="py-4 first:pt-0 last:pb-0">
        <div class="flex items-start gap-3">
          <div class="w-9 h-9 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5" style="background: var(--color-primary-light);">
            <svg class="h-4.5 w-4.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: var(--color-primary);">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium" style="color: var(--color-text-primary);">ダークモード</p>
                <p class="text-xs text-body-muted mt-0.5">画面の配色をダークテーマに切り替えます。</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" data-theme-target="checkbox" data-action="change->theme#toggle"
                  <%= 'checked' if current_user.settings.dig('theme') == 'dark' %>>
                <div class="toggle-switch-track"></div>
                <div class="toggle-switch-thumb"></div>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
