<%# AdminKit風プロフィール: CSS変数、統一スタイル %>
<% avatar_url = @user.profile_image.presence || "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(@user.name)}&background=random" %>
<% role_label = if @user.admin?
  "管理者"
elsif @user.teacher?
  "教員"
else
  "学生"
end %>

<div class="max-w-3xl mx-auto space-y-6" data-controller="profile" data-profile-editing-value="<%= @user.errors.any? %>">
  <%# ページヘッダー %>
  <div class="card">
    <div class="card-body">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--color-primary-light);">
          <svg class="h-6 w-6" style="color: var(--color-primary);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="7" r="4" />
            <path d="M20 21a8 8 0 1 0-16 0" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-semibold" style="color: var(--color-text-primary);">プロフィール</h1>
          <p class="text-sm mt-1" style="color: var(--color-text-secondary);">基本情報を更新できます。</p>
        </div>
      </div>
    </div>
  </div>

  <%# プロフィールカード %>
  <div class="card">
    <div class="p-6">
      <div class="flex items-center">
        <div class="relative">
          <img src="<%= avatar_url %>" alt="" class="h-20 w-20 rounded-full" />
          <button type="button" class="absolute bottom-0 right-0 rounded-full p-1 shadow-sm" style="background-color: var(--color-background); border: 1px solid var(--color-border);">
            <span class="sr-only">プロフィール画像を変更</span>
            <svg class="h-4 w-4" style="color: var(--color-text-muted);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="7" r="4" />
              <path d="M20 21a8 8 0 1 0-16 0" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </button>
        </div>
        <div class="ml-6">
          <h3 class="text-lg font-medium" style="color: var(--color-text-primary);"><%= @user.name %></h3>
          <p class="text-sm" style="color: var(--color-text-muted);"><%= role_label %></p>
        </div>
      </div>
    </div>

    <div class="p-6" style="border-top: 1px solid var(--color-border);">
      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :name, "氏名", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
          <%= f.text_field :name, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
          <%= f.email_field :email, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
        </div>

        <% if @user.student? %>
          <div>
            <%= f.label :student_id, "学生ID", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
            <%= f.text_field :student_id, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
          <%= f.password_field :password, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
        </div>

        <div>
          <%= f.label :password_confirmation, "パスワード(確認)", class: "block text-sm font-medium", style: "color: var(--color-text-primary);" %>
          <%= f.password_field :password_confirmation, class: "input mt-1", data: { profile_target: "field" }, disabled: !@user.errors.any? %>
        </div>

        <div class="flex justify-end space-x-3">
          <button type="button" class="btn btn-secondary hidden" data-profile-target="cancelButton" data-action="profile#cancel">
            キャンセル
          </button>
          <%= f.submit "更新", class: "btn btn-primary hidden", data: { profile_target: "saveButton" } %>
          <button type="button" class="btn btn-primary" data-profile-target="editButton" data-action="profile#edit">
            編集
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <%# 通知設定カード %>
  <div class="card p-6">
    <h2 class="text-lg font-medium mb-4" style="color: var(--color-text-primary);">通知設定</h2>

    <%# 未実装バナー (NewUI.md 7.7: 通知設定は未実装であることを明確に表示) %>
    <div class="not-implemented-banner mb-4">
      <svg class="not-implemented-banner-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M10.29 3.86L1.82 18a2 2 0 001.71 3h16.94a2 2 0 001.71-3L13.71 3.86a2 2 0 00-3.42 0z" stroke-linecap="round" stroke-linejoin="round"/>
        <line x1="12" y1="9" x2="12" y2="13"/>
        <line x1="12" y1="17" x2="12.01" y2="17"/>
      </svg>
      <span class="not-implemented-banner-text">⚠️ 通知機能（メール/LINE/Push）は現在未実装です</span>
    </div>

    <%= form_with url: profile_path, method: :patch, scope: :notifications, class: "space-y-4 opacity-60 pointer-events-none" do |f| %>
      <label class="flex items-center gap-2 text-sm" style="color: var(--color-text-primary);">
        <%= f.check_box :email, { checked: @notification_preferences["email"] }, "1", "0" %>
        メール通知を受け取る
      </label>
      <label class="flex items-center gap-2 text-sm" style="color: var(--color-text-primary);">
        <%= f.check_box :line, { checked: @notification_preferences["line"] }, "1", "0" %>
        LINE通知を受け取る
      </label>
      <div>
        <%= f.label :line_user_id, "LINEユーザーID", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
        <%= f.text_field :line_user_id, value: @user.line_user_id, class: "input", placeholder: "Uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" %>
        <p class="text-xs mt-1" style="color: var(--color-text-muted);">LINEのメッセージ受信ユーザーIDを設定してください。</p>
      </div>
      <label class="flex items-center gap-2 text-sm" style="color: var(--color-text-primary);">
        <%= f.check_box :push, { checked: @notification_preferences["push"] }, "1", "0" %>
        Push通知を受け取る
      </label>
      <% webpush_public_key = ENV["WEBPUSH_PUBLIC_KEY"].to_s %>
      <div
        class="rounded-lg p-3 space-y-2"
        style="border: 1px solid var(--color-border);"
        data-controller="push-subscription"
        data-push-subscription-public-key-value="<%= webpush_public_key %>"
      >
        <p class="text-xs" style="color: var(--color-text-muted);" data-push-subscription-target="status">
          <% if webpush_public_key.blank? %>
            Push通知の配信キーが未設定です。
          <% elsif @push_subscriptions.any? %>
            Push通知は有効化されています。
          <% else %>
            Push通知は未設定です。
          <% end %>
        </p>
        <div class="flex flex-col sm:flex-row gap-2">
          <button type="button" class="btn btn-primary" data-action="push-subscription#subscribe" data-push-subscription-target="subscribeButton">
            Push通知を有効化
          </button>
          <button type="button" class="btn btn-secondary" data-action="push-subscription#unsubscribe" data-push-subscription-target="unsubscribeButton">
            Push通知を解除
          </button>
        </div>
      </div>
      <div>
        <%= f.submit "通知設定を更新", class: "btn btn-secondary" %>
      </div>
    <% end %>
    <p class="text-xs mt-2" style="color: var(--color-text-muted);">配信チャネルの設定は管理者の承認や連携状況により有効化されます。</p>
  </div>

</div>
