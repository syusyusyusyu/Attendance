<%# AdminKit風出席QR発行: カード、タイマー表示 %>
<div class="max-w-2xl mx-auto space-y-6">
  <%# ページヘッダー %>
  <div class="card">
    <div class="card-body">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--color-success-light);">
          <svg class="h-6 w-6" style="color: var(--color-success);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="6" height="6"/>
            <rect x="15" y="3" width="6" height="6"/>
            <rect x="3" y="15" width="6" height="6"/>
            <path d="M15 15h6v6h-6z"/>
            <path d="M11 11h2v2h-2z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-semibold" style="color: var(--color-text-primary);">出席QR発行</h1>
          <p class="text-sm mt-1" style="color: var(--color-text-secondary);">授業を選択して出席QRを発行します。</p>
        </div>
      </div>
    </div>
  </div>

  <%# QR発行カード %>
  <div class="card">
    <div class="card-header">
      <h2 class="font-semibold" style="color: var(--color-text-primary);">クラス選択</h2>
    </div>
    <div
      class="card-body"
      data-controller="qr"
      <% if @selected_class %>
        data-qr-expires-at-value="<%= @expires_at.to_i %>"
        data-qr-filename-value="qrcode-<%= @selected_class.id %>.png"
        data-qr-refresh-url-value="<%= generate_qr_path(class_id: @selected_class.id, format: :json) %>"
        data-qr-refresh-interval-value="60"
      <% end %>
    >
      <div class="mb-6">
        <%= form_with url: generate_qr_path, method: :get, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :class_id, "クラス", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
            <%= f.select :class_id,
              options_for_select(@classes.map { |klass| ["#{klass.name} (#{klass.room})", klass.id] }, @selected_class&.id),
              { include_blank: "クラスを選択" },
              class: "input" %>
          </div>
          <div class="flex items-center gap-2">
            <%= f.check_box :demo_mode, { checked: params[:demo_mode] == "1", class: "h-4 w-4 rounded", style: "border-color: var(--color-border); accent-color: var(--color-primary);" }, "1", "0" %>
            <%= f.label :demo_mode, "デモ用（位置情報チェックをスキップ）", class: "text-sm", style: "color: var(--color-text-primary);" %>
          </div>
          <%= f.submit "出席QRを発行", class: "btn btn-primary" %>
        <% end %>
      </div>

      <% if @selected_class %>
        <div class="flex flex-col items-center">
          <%# QRコード表示 %>
          <div class="p-5 rounded-lg mb-4 w-full max-w-sm sm:max-w-md qr-code" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
            <img
              src="<%= @qr_image_url %>"
              alt="QRコード"
              class="w-full h-auto"
              data-qr-target="image"
            />
          </div>

          <%# クラス情報 %>
          <div class="mb-4 text-center">
            <div class="text-sm font-medium mb-1" style="color: var(--color-text-muted);">クラス情報:</div>
            <div class="text-lg font-semibold" style="color: var(--color-text-primary);"><%= @selected_class.name %></div>
            <div class="text-sm" style="color: var(--color-text-secondary);"><%= @selected_class.room %></div>
            <% if @class_session %>
              <div class="mt-2 flex justify-center">
                <%= render "shared/session_status_badges", session: @class_session %>
              </div>
            <% end %>
          </div>

          <%# 有効期限表示 %>
          <div class="flex items-center mb-2">
            <svg class="h-5 w-5 mr-2" style="color: var(--color-error);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="9" />
              <path d="M12 7v5l3 3" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="text-sm" style="color: var(--color-text-primary);">
              有効期限: <%= @expires_at.strftime("%H:%M") %> (残り <span data-qr-target="timeLeft"><%= ((@expires_at - Time.current).to_i.clamp(0, 300) / 60).to_s %>:<%= ((@expires_at - Time.current).to_i.clamp(0, 300) % 60).to_s.rjust(2, "0") %></span>)
            </span>
          </div>
          <p class="text-xs mb-6" style="color: var(--color-text-muted);">QRコードは定期的に自動更新されます。</p>

          <%# アクションボタン %>
          <div class="flex gap-3">
            <%= link_to generate_qr_path(class_id: @selected_class.id), class: "btn btn-secondary" do %>
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12a9 9 0 1 1-3-6.7" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M21 3v6h-6" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              再発行
            <% end %>
            <button type="button" class="btn btn-primary" data-action="qr#download">
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M7 10l5 5 5-5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M12 15V3" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              ダウンロード
            </button>
          </div>
        </div>
      <% else %>
        <div class="empty-state">
          <div class="empty-state-title">クラスを選択するとQRコードが生成されます。</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
