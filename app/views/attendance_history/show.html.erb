<%# AdminKit風出席履歴: CSS変数、統一スタイル %>
<% day_names = %w[日 月 火 水 木 金 土] %>
<% calendar_start = @month_start.beginning_of_week(:sunday) %>
<% calendar_end = @month_end.end_of_week(:sunday) %>
<% weeks = (calendar_start..calendar_end).to_a.each_slice(7).to_a %>
<% status_badge_classes = {
  "present" => "badge-success",
  "late" => "badge-warning",
  "early_leave" => "badge-warning",
  "absent" => "badge-error",
  "excused" => "badge-info"
} %>

<%= turbo_frame_tag "attendance_history", class: "relative" do %>
  <%= render "shared/frame_loader" %>
  <div class="max-w-5xl mx-auto space-y-6">
    <%# ページヘッダー %>
    <div class="card">
      <div class="card-body">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--color-success-light);">
            <svg class="h-6 w-6" style="color: var(--color-success);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="9" />
              <path d="M12 7v5l3 3" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-semibold">出席履歴</h1>
            <p class="text-sm mt-1 text-body-secondary">あなたの出席状況をカレンダーで確認できます。</p>
          </div>
        </div>
      </div>
    </div>

    <%# エクスポートカード %>
    <div class="card">
      <div class="card-body">
        <h3 class="text-sm font-medium mb-3">出席履歴のエクスポート</h3>
        <%= form_with url: attendance_history_export_path, method: :get, class: "grid grid-cols-1 sm:grid-cols-4 gap-3 items-end", data: { turbo: false } do |f| %>
          <div class="min-w-0">
            <%= f.label :start_date, "開始日", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
            <%= f.date_field :start_date, value: @month_start, class: "input max-w-full" %>
          </div>
          <div class="min-w-0">
            <%= f.label :end_date, "終了日", class: "block text-sm font-medium mb-2", style: "color: var(--color-text-primary);" %>
            <%= f.date_field :end_date, value: @month_end, class: "input max-w-full" %>
          </div>
          <div class="sm:col-span-2 flex flex-col sm:flex-row gap-2">
            <button type="submit" name="format" value="csv" class="btn btn-secondary w-full sm:w-auto">
              CSV出力
            </button>
            <button type="submit" name="format" value="pdf" class="btn btn-primary w-full sm:w-auto">
              PDF出力
            </button>
          </div>
        <% end %>
        <p class="text-xs mt-2 text-body-muted">指定期間の履歴を出力できます。</p>
      </div>
    </div>

    <%# カレンダーと詳細 %>
    <div class="card">
      <div class="card-body">
        <div class="flex flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6">
          <%# カレンダー %>
          <div class="md:w-1/2">
            <div class="rounded-lg overflow-hidden" style="border: 1px solid var(--color-border);">
              <div class="flex items-center justify-between px-4 py-2" style="border-bottom: 1px solid var(--color-border); background-color: var(--color-background);">
                <%= link_to history_path(date: @prev_month),
                  class: "p-2 rounded-md hover:opacity-70",
                  data: { turbo_frame: "attendance_history" } do %>
                  <svg class="h-4 w-4 text-body-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                <% end %>
                <div class="text-sm font-medium"><%= @date.strftime("%Y年%m月") %></div>
                <%= link_to history_path(date: @next_month),
                  class: "p-2 rounded-md hover:opacity-70",
                  data: { turbo_frame: "attendance_history" } do %>
                  <svg class="h-4 w-4 text-body-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 6l6 6-6 6" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                <% end %>
              </div>

              <div class="grid grid-cols-7 gap-px text-xs" style="background-color: var(--color-border); color: var(--color-text-muted);">
                <% day_names.each do |day| %>
                  <div class="py-2 text-center font-medium" style="background-color: var(--color-surface);"><%= day %></div>
                <% end %>

                <% weeks.each do |week| %>
                  <% week.each do |day| %>
                    <% in_month = day.month == @date.month %>
                    <% status = @status_by_date[day] %>
                    <% is_selected = day == @date %>
                    <%= link_to history_path(date: day),
                      class: "py-2 text-center text-sm",
                      style: "background-color: var(--color-background); #{
                        if is_selected
                          "background-color: var(--color-primary); color: white;"
                        elsif !in_month
                          "color: var(--color-text-muted); opacity: 0.4;"
                        elsif status == "present"
                          "background-color: var(--color-success-light); color: var(--color-success-dark);"
                        elsif status == "late" || status == "early_leave"
                          "background-color: var(--color-warning-light); color: var(--color-warning-dark);"
                        elsif status == "absent"
                          "background-color: var(--color-error-light); color: var(--color-error-dark);"
                        elsif status == "excused"
                          "background-color: var(--color-info-light); color: var(--color-info-dark);"
                        else
                          "color: var(--color-text-primary);"
                        end
                      }",
                      data: { turbo_frame: "attendance_history" } do %>
                      <%= day.day %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>

            <div class="mt-4 flex flex-wrap items-center gap-3 text-xs text-body-secondary">
              <span class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded" style="background-color: var(--color-success-light);"></span>
                出席
              </span>
              <span class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded" style="background-color: var(--color-warning-light);"></span>
                遅刻/早退
              </span>
              <span class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded" style="background-color: var(--color-error-light);"></span>
                欠席
              </span>
              <span class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded" style="background-color: var(--color-info-light);"></span>
                公欠
              </span>
            </div>
          </div>

          <%# 日別詳細（PC表示） %>
          <div class="md:w-1/2 hidden md:block">
            <%= render "day_detail",
              date: @date,
              day_names: day_names,
              records: @records,
              status_badge_classes: status_badge_classes,
              policies_by_class: @policies_by_class,
              requests_by_class: @requests_by_class,
              changes_by_record: @changes_by_record %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# SP用ドロワー詳細 %>
  <%= turbo_frame_tag "attendance_history_detail",
    class: "drawer-panel drawer-sheet hidden md:hidden",
    data: { controller: "drawer", drawer_open_value: params[:date].present? } do %>
    <div class="card p-6">
      <%= render "day_detail",
        date: @date,
        day_names: day_names,
        records: @records,
        status_badge_classes: status_badge_classes,
        policies_by_class: @policies_by_class,
        requests_by_class: @requests_by_class,
        changes_by_record: @changes_by_record %>
      <div class="mt-4 flex justify-end">
        <button type="button" class="btn btn-secondary" data-action="drawer#close">閉じる</button>
      </div>
    </div>
  <% end %>
<% end %>
