<% if turbo_frame_request? %>
  <%= render "inline_form", school_class: @school_class %>
<% else %>
  <div class="max-w-4xl mx-auto">
    <div class="card">
      <div class="p-4 bg-surface-hover border-b-themed">
        <h1 class="text-xl font-medium text-body">クラス編集</h1>
        <p class="text-sm text-body-secondary mt-1">クラス情報を更新します。</p>
      </div>
      <div class="p-6">
        <%= form_with model: @school_class, class: "space-y-6", multipart: true do |f| %>
          <%= render "form", f: f %>
          <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
            <%= link_to "詳細へ戻る", school_class_path(@school_class), class: "btn btn-secondary" %>
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
