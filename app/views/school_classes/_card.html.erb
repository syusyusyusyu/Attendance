<%= turbo_frame_tag dom_id(klass),
  data: { filter_target: "row", role: (klass.is_active ? "active" : "inactive") } do %>
  <div class="card p-4">
    <div class="flex items-start justify-between">
      <div>
        <h2 class="text-lg font-medium text-body"><%= klass.name %></h2>
        <p class="text-sm text-body-secondary"><%= klass.schedule_label || "スケジュール未設定" %></p>
        <p class="text-xs text-body-muted mt-1">教室: <%= klass.room %> / <%= klass.subject %></p>
      </div>
      <span class="text-xs px-2 py-1 rounded-full <%= klass.is_active ? "badge-success" : "badge-neutral" %>">
        <%= klass.is_active ? "運用中" : "停止中" %>
      </span>
    </div>
    <div class="mt-4 flex flex-wrap gap-2">
      <%= link_to "詳細",
        school_class_path(klass),
        data: { turbo_frame: "_top" },
        class: "btn btn-secondary text-sm" %>
      <%= link_to "編集",
        edit_school_class_path(klass),
        data: { turbo_frame: dom_id(klass) },
        class: "btn btn-secondary text-sm" %>
      <%= link_to "出席管理",
        attendance_path(class_id: klass.id),
        data: { turbo_frame: "_top" },
        class: "btn btn-secondary text-sm" %>
      <% if current_user.admin? %>
        <%= link_to "削除",
          school_class_path(klass),
          data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
          class: "btn btn-secondary text-sm text-red-600 border-red-200 hover:bg-red-50" %>
      <% end %>
    </div>
  </div>
<% end %>
