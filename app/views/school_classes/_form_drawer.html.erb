<%= turbo_frame_tag "school_class_form",
  class: "drawer-panel drawer-sheet",
  data: { controller: "drawer", drawer_open_value: true } do %>
  <div class="card">
    <div class="p-4 bg-surface-hover border-b-themed">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
        <div>
          <h2 class="text-xl font-medium text-body"><%= title %></h2>
          <% if subtitle.present? %>
            <p class="text-sm text-body-secondary mt-1"><%= subtitle %></p>
          <% end %>
        </div>
        <button type="button" class="text-sm text-body-secondary hover:text-body" data-action="drawer#close">
          閉じる
        </button>
      </div>
    </div>
    <div class="p-6">
      <%= form_with model: school_class, class: "space-y-6", multipart: true do |f| %>
        <%= render "form", f: f %>
        <div class="flex justify-end">
          <%= f.submit submit_label, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
