<% if turbo_frame_request? %>
  <%= render "form_drawer",
    title: "新規クラス作成",
    subtitle: "授業情報を入力してください。",
    submit_label: "作成",
    school_class: @school_class %>
<% else %>
  <div class="max-w-4xl mx-auto">
    <div class="card">
      <div class="p-4 bg-surface-hover border-b-themed">
        <h1 class="text-xl font-medium text-body">新規クラス作成</h1>
        <p class="text-sm text-body-secondary mt-1">授業情報を入力してください。</p>
      </div>
      <div class="p-6">
        <%= form_with model: @school_class, class: "space-y-6", multipart: true do |f| %>
          <%= render "form", f: f %>
          <div class="flex justify-end">
            <%= f.submit "作成", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
