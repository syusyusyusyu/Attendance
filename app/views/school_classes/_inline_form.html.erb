<%= turbo_frame_tag dom_id(school_class) do %>
  <div class="card p-4 space-y-4">
    <div class="flex items-center justify-between">
      <div class="text-sm font-medium text-gray-900">クラス編集</div>
      <%= link_to "キャンセル",
        school_class_path(school_class),
        data: { turbo_frame: dom_id(school_class) },
        class: "text-xs text-gray-500 hover:text-gray-700" %>
    </div>
    <%= form_with model: school_class, class: "space-y-4" do |f| %>
      <%= render "form", f: f %>
      <div class="flex flex-col sm:flex-row gap-2">
        <%= f.submit "保存", class: "btn btn-primary w-full sm:w-auto" %>
        <%= link_to "キャンセル",
          school_class_path(school_class),
          data: { turbo_frame: dom_id(school_class) },
          class: "btn btn-secondary w-full sm:w-auto" %>
      </div>
    <% end %>
  </div>
<% end %>
