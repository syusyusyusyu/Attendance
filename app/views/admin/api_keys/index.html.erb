<div class="max-w-6xl mx-auto space-y-6">
  <div class="card p-6">
    <h1 class="text-2xl font-semibold text-gray-900">APIキー管理</h1>
    <p class="text-sm text-gray-500 mt-1">学務連携向けにAPIキーを発行します。</p>
  </div>

  <% if @generated_token.present? %>
    <div class="card p-4 border border-green-200 bg-green-50 text-sm text-gray-700">
      <div class="font-medium text-green-700">新しいAPIキーを発行しました</div>
      <div class="mt-2 break-all"><%= @generated_token %></div>
      <div class="text-xs text-gray-500 mt-1">このトークンは一度だけ表示されます。</div>
    </div>
  <% end %>

  <div class="card p-6">
    <h2 class="text-sm font-medium text-gray-700 mb-3">新規発行</h2>
    <%= form_with url: admin_api_keys_path, method: :post, class: "grid grid-cols-1 md:grid-cols-4 gap-4 items-end" do %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">ユーザー</label>
        <%= select_tag :user_id, options_for_select(@users.map { |user| ["#{user.name} (#{user.email})", user.id] }), class: "input" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">名称</label>
        <%= text_field_tag :name, nil, class: "input", placeholder: "例: 学務連携" %>
      </div>
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-2">スコープ</label>
        <div class="flex flex-wrap gap-3 text-sm text-gray-700">
          <% @scope_options.each do |scope| %>
            <label class="flex items-center gap-2">
              <%= check_box_tag "scopes[]", scope, false, class: "rounded border-gray-300 text-[var(--google-green)] focus:ring-[var(--google-green)]" %>
              <span><%= scope %></span>
            </label>
          <% end %>
        </div>
      </div>
      <div class="md:col-span-4">
        <%= submit_tag "発行する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="card p-6">
    <h2 class="text-sm font-medium text-gray-700 mb-3">発行済みキー</h2>
    <div class="table-container">
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ユーザー</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名称</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">スコープ</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状態</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @api_keys.each do |key| %>
            <tr>
              <td class="px-4 py-2 text-sm text-gray-700"><%= key.user&.name || "-" %></td>
              <td class="px-4 py-2 text-sm text-gray-500"><%= key.name %></td>
              <td class="px-4 py-2 text-sm text-gray-500"><%= key.scopes.join(", ") %></td>
              <td class="px-4 py-2 text-sm text-gray-500"><%= key.active? ? "有効" : "無効" %></td>
              <td class="px-4 py-2 text-right">
                <% if key.active? %>
                  <%= form_with url: admin_api_key_path(key), method: :patch do %>
                    <input type="hidden" name="revoke" value="1" />
                    <button type="submit" class="btn btn-secondary text-sm">無効化</button>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if @api_keys.empty? %>
            <tr>
              <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">APIキーがありません。</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
