<%# AdminKit風ロール/権限: 権限マトリクス、即時反映 %>
<div class="max-w-6xl mx-auto space-y-6">
  <%# ページヘッダー %>
  <div class="page-header">
    <div>
      <h1 class="page-title">ロール/権限</h1>
      <p class="page-subtitle">各ロールに付与する権限を管理します。</p>
      <%= breadcrumb(["管理", admin_path], ["ロール/権限"]) %>
    </div>
  </div>

  <%# ロールカード %>
  <% @roles.each do |role| %>
    <%= render "card", role: role, permissions: @permissions %>
  <% end %>
</div>
