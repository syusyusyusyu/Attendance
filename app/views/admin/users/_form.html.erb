<%= form_with model: [:admin, user], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, "氏名", class: "block text-sm font-medium text-body-secondary mb-2" %>
    <%= f.text_field :name, class: "input" %>
  </div>
  <div>
    <%= f.label :email, "メール", class: "block text-sm font-medium text-body-secondary mb-2" %>
    <%= f.email_field :email, class: "input" %>
  </div>
  <div>
    <%= f.label :student_id, "学籍ID", class: "block text-sm font-medium text-body-secondary mb-2" %>
    <%= f.text_field :student_id, class: "input" %>
  </div>
  <div>
    <%= f.label :role, "ロール", class: "block text-sm font-medium text-body-secondary mb-2" %>
    <%= f.select :role, options_for_select(User.roles.keys.map { |role| [role, role] }, user.role), {}, class: "input" %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-body-secondary mb-2" %>
      <%= f.password_field :password, class: "input" %>
    </div>
    <div>
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-body-secondary mb-2" %>
      <%= f.password_field :password_confirmation, class: "input" %>
    </div>
  </div>
  <p class="text-xs text-body-muted">学生は未入力の場合、学籍IDが初期パスワードになります。</p>
  <div class="flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <% if turbo_frame_request? %>
      <button type="button" class="btn btn-secondary" data-action="drawer#close">閉じる</button>
    <% else %>
      <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
